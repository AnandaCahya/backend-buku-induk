<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet" />
    <style>
        *{
            font-size: 12px;
        }
        .main table, .main td, .main tr, .main th{
            border: 1px solid black;
            border-collapse: collapse;
        }
        .jenis-mapel{
            text-align: start;
        }
        .nilai {
            text-align: center;
        }
        .keterangan {
            vertical-align: top;
            text-align: justify;
            padding: 2px;
        }
        .mata-pelajaran {
            width: 200px; 
            font-size: 15px;
        }
        .no {
            width: 15px;
            text-align: center;
        }
        @media print {
            @page {
                size: A3;
                margin: 20mm;
            }
        }
    </style>
</head>
<body style="margin: 20px;">
    <div style="width: 100%; display: flex;">
        <table style="width: 50%;">
            <tr>
                <td>Nama</td>
                <td>:</td>
                <td><b><%= element.data_diri.nama_lengkap %></b></td>
            </tr>
            <tr>
                <td>Nomor Induk</td>
                <td>:</td>
                <td><%= element.nisn %></td>
            </tr>
            <tr>
                <td>Nama Sekolah</td>
                <td>:</td>
                <td><b>SMKN 2 SINGOSARI</b></td>
            </tr>
        </table>
        <table style="width: 50%;">
            <tr>
                <td>Bidang Keahlian</td>
                <td>:</td>
                <td><%= element.jurusan.nama %></td>
            </tr>
            <tr>
                <td>Program Keahlian</td>
                <td>:</td>
                <td><%= element.pendidikan.diterima_di_program_keahlian %></td>
            </tr>
            <tr>
                <td>Kompetensi Keahlian</td>
                <td>:</td>
                <td><%= element.pendidikan.diterima_di_paket_keahlian %></td>
            </tr>
        </table>
    </div>
    <div class="main">
        <table style="border: 1px solid black; width: 100%;">
            <tr>
                <th rowspan="4" colspan="2" class="mata-pelajaran">Mata Pelajaran</th>
            </tr>
            <tr>
                <% 
                    const tahunPelajaran = [];
                    for (let i = 1; i <= 3; i++) {
                        const startYear = parseInt(element.angkatan.tahun) + i - 1;
                        const endYear = startYear + 1;
                        tahunPelajaran.push(`${startYear}/${endYear}`);
                    }
                %>
                <th colspan="4">Tahun Pelajaran <%= tahunPelajaran[0] %></th>
                <th colspan="4">Tahun Pelajaran <%= tahunPelajaran[1] %></th>
                <th colspan="4">Tahun Pelajaran <%= tahunPelajaran[2] %></th>
            </tr>
            <tr>
                <th colspan="2">Semester 1</th>
                <th colspan="2">Semester 2</th>
                <th colspan="2">Semester 3</th>
                <th colspan="2">Semester 4</th>
                <th colspan="2">Semester 5</th>
                <th colspan="2">Semester 6</th>
            </tr>
            <tr>
                <th>Nilai</th>
                <th>Keterangan</th>
                <th>Nilai</th>
                <th>Keterangan</th>
                <th>Nilai</th>
                <th>Keterangan</th>
                <th>Nilai</th>
                <th>Keterangan</th>
                <th>Nilai</th>
                <th>Keterangan</th>
                <th>Nilai</th>
                <th>Keterangan</th>
            </tr>

            <% 
                const kelompokUmum = ['pendidikan agama dan budi pekerti', 'pendidikan pancasila', 'bahasa indonesia', 'pendidikan jasmani, olahraga, dan kesehatan', 'sejarah', 'seni budaya', 'bahasa jawa'];
                const kelompokKejuruan = ['matematika', 'bahasa inggris', 'informatika', 'projek ipas', 'dpk', 'mpkk', 'pkdk', 'mpp'];
                const groupedByMapel = {
                    'Kelompok Mata Pelajaran Umum': kelompokUmum,
                    'Kelompok Mata Pelajaran Kejuruan': kelompokKejuruan
                };
            %>

            <% Object.keys(groupedByMapel).forEach(function(category) { %>
                <tr>
                    <th colspan="14" class="jenis-mapel"><%= category %></th>
                </tr>
                <% let index = 1; %>
                <% groupedByMapel[category].forEach(function(mapel) { %>
                    <tr>
                        <td class="no"><%= index++ %>.</td>
                        <td class="mata-pelajaran"><%= mapel %></td>
                        <% for (let i = 0; i < 6; i++) { %>
                            <td class="nilai"><%= nilaiPerSemester[i] && nilaiPerSemester[i][mapel] ? nilaiPerSemester[i][mapel].nilai : '' %></td>
                            <td class="keterangan"><%= nilaiPerSemester[i] && nilaiPerSemester[i][mapel] ? nilaiPerSemester[i][mapel].keterangan : '' %></td>
                        <% } %>
                    </tr>
                <% }); %>
            <% }); %>

            <tr>
                <th colspan="13" style="text-align: start;">Kehadiran</th>
            </tr>

            <tr>
                <td>1.</td>
                <td>Sakit</td>
                <% for (let i = 1; i <= 6; i++) { %>
                    <td colspan="2">
                        <% const siaData = sia.find(s => s.semester === i); %>
                        <%= siaData ? siaData.sakit : 0 %> Hari
                    </td>
                <% } %>
            </tr>
            <tr>
                <td>2.</td>
                <td>Ijin</td>
                <% for (let i = 1; i <= 6; i++) { %>
                    <td colspan="2">
                        <% const siaData = sia.find(s => s.semester === i); %>
                        <%= siaData ? siaData.izin : 0 %> Hari
                    </td>
                <% } %>
            </tr>
            <tr>
                <td>3.</td>
                <td>Tanpa Keterangan</td>
                <% for (let i = 1; i <= 6; i++) { %>
                    <td colspan="2">
                        <% const siaData = sia.find(s => s.semester === i); %>
                        <%= siaData ? siaData.alpha : 0 %> Hari
                    </td>
                <% } %>
            </tr>

            
        </table>
    </div>
</body>
</html>